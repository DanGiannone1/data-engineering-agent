# Azure subscription
TENANT_ID=your-tenant-id
SUBSCRIPTION_ID=your-subscription-id

# Deployment variables (used by deployment scripts)
RESOURCE_GROUP=data-engineering-agent
LOCATION=centralus
STORAGE_ACCOUNT_NAME=yourstorageaccount
COSMOS_ACCOUNT_NAME=your-cosmos-account
FUNCTION_APP_NAME=your-function-app
DATABRICKS_WORKSPACE_NAME=your-databricks-workspace
APP_INSIGHTS_NAME=your-app-insights
LOG_ANALYTICS_NAME=your-log-analytics

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4.1

# Databricks Service Principal (for Spark job -> ADLS auth)
# Create an App Registration in Entra ID and add a client secret.
# Grant the SP "Storage Blob Data Contributor" on your ADLS storage account.
DATABRICKS_SP_CLIENT_ID=your-sp-client-id
DATABRICKS_SP_SECRET=your-sp-client-secret
DATABRICKS_SP_TENANT=your-tenant-id
